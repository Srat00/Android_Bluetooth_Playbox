<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TouchActivity">

    <Button
        android:id="@+id/meButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Me"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/youButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You"
        android:layout_alignBaseline="@+id/meButton"
        android:layout_alignBottom="@+id/meButton"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="48dp" />

    <Button
        android:id="@+id/resultButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="결과"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/meButton"
        android:layout_marginTop="32dp" />

    <View
        android:id="@+id/purpleArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#800080"
        android:layout_below="@+id/resultButton"
        android:layout_marginTop="32dp"
        android:clickable="true" />

    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="남은 시간: 10"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/purpleArea"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/countTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="터치 횟수: 0"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/purpleArea"
        android:layout_marginTop="16dp" />

</RelativeLayout>

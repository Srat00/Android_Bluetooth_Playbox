<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f8ff">

    <ImageView
        android:id="@+id/animationImageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/phone1"
        app:layout_constraintBottom_toTopOf="@+id/shakeCountTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/shakeCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum_gothic_bold"
        android:text="제한 시간 내에 폰을 많이 흔드세요!"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/button1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/animationImageView"
        app:layout_constraintVertical_bias="0.107" />

    <Button
        android:id="@+id/button1"
        android:layout_width="107dp"
        android:layout_height="51dp"
        android:background="#ff7f00"
        android:fontFamily="@font/nanum_gothic_bold"
        android:text="시작!"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shakeCountTextView"
        app:layout_constraintVertical_bias="0.904" />

    <TextView
        android:id="@+id/title"
        android:layout_width="202dp"
        android:layout_height="44dp"
        android:fontFamily="@font/nanum_gothic_bold"
        android:text="쉐킷쉐킷"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="37sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/animationImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.49" />

    <TextView
        android:id="@+id/time_alarm"
        android:layout_width="150dp"
        android:layout_height="46dp"
        android:fontFamily="@font/nanum_gothic_bold"
        android:text="남은시간 : "
        android:textColor="#000000"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/shakeCountTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animationImageView" />
</androidx.constraintlayout.widget.ConstraintLayout>
